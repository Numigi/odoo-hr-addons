<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="hr_contract_form" model="ir.ui.view">
        <field name="name">HR Contract: add hourly wage</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <div name="wage" position="after">
                <label for="hourly_wage"/>
                <div class="o_row" name="hourly_wage">
                    <field name="hourly_wage" nolabel="1"/>
                    <span>/ hour</span>
                </div>
            </div>
        </field>
    </record>

</odoo>
