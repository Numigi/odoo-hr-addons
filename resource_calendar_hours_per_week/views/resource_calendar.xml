<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="resource_calendar_form" model="ir.ui.view">
        <field name="name">Resource Calendar: add hours per week</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <field name="hours_per_day" position="attributes">
                <attribute name="widget">float_time</attribute>
            </field>
            <field name="hours_per_day" position="after">
                <field name="hours_per_week" widget="float_time"/>
            </field>
        </field>
    </record>

</odoo>
